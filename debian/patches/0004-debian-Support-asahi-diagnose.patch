+            lib*mesa*"
     else
       echo "Distribution not supported"
       return
     fi
     cat <<EOF
 \`\`\`
-$($cmd $pkgs 2>/dev/null | sort -u)
+$($cmd $pkgs 2>/dev/null | grep '^ii' | sort -u)
 \`\`\`
 
