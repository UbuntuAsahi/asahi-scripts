diff --git a/asahi-diagnose b/asahi-diagnose
index 5062387..83b99dd 100755
--- a/asahi-diagnose
+++ b/asahi-diagnose
@@ -169,13 +169,18 @@ package_versions() {
             fedora-asahi-remix-scripts tiny-dfr uboot-images-armv8 kernel-16k
