             asahi-audio speakersafetyd wireplumber pipewire mesa"
+    elif [ -e /etc/debian_version ]; then
+      cmd="dpkg -l"
+      pkgs="m1n1 alsa-ucm-conf-asahi tiny-dfr u-boot-asahi linux-image-*asahi*
